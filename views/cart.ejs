<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Sepetiniz</title>
</head>
<body>
    <nav>
        <a href="/">Ana Sayfa</a>
        <a href="/cart">Sepet</a>
        <% if (!user) { %>
            <a href="/register">Kayıt ol</a>
            <a href="/login">Giriş</a>
        <% } else { %>
            <a href="/logout">Çıkış yap</a>
        <% } %>
    </nav>

    <h1 class="cart-title">Sepetiniz</h1>

    <div class="sort-container">
        <label for="sort">Sort by:</label>
        <select id="sort" onchange="sortCart()">
            <option value="priciest">En Pahalıdan En Ucuza</option>
            <option value="cheapest">En Ucuzdan En Pahalıya</option>
        </select>
    </div>

    <div id="cart-items">
        <!-- Sepet öğeleri dinamik olarak buraya yüklenecektir -->
    </div>

    <main>
        <ul id="cart-items">
            <% cartItems.forEach(item => { %>
                <li>
                    <img src="<%= item.image %>" alt="<%= item.name %>">
                    <h2><%= item.name %></h2>
                    <p>Price: $<%= item.price %></p>
                </li>
            <% }) %>
        </ul>

        <div class="cart-buttons-container">
            <button onclick="clearCart()" class="cart-btn">Sepeti Temizle</button>
            <button onclick="checkout()" class="cart-btn">Ödeme</button>
        </div>
    </main>

    <script src="/js/cart.js"></script>
</body>
</html>
